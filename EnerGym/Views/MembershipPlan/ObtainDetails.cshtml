@using EnerGym.ViewModels.MembershipPlanViewModels;
@model MembershipPlanDetailsViewModel

@{
    ViewData["Title"] = "Membership Plan Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">@ViewData["Title"]</h2>
    </div>
    <hr />
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Plan Type:</div>
                <div class="col-md-9">@Model.PlanType</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Description:</div>
                <div class="col-md-9">@Model.Description</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Price:</div>
                <div class="col-md-9">@Model.Price.ToString("C")</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Duration:</div>
                <div class="col-md-9">@Model.DurationInMonth months</div>
            </div>
        </div>
        <div class="card-footer text-center">
            <form asp-controller="MembershipPlan" asp-route-id="@Model.Id" asp-action="AddToPersonalHall" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success">Buy Now</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary d-inline">Back</a>
        </div>
    </div>
</div>

