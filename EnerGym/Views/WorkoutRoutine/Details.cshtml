@using EnerGym.ViewModels.WorkoutRoutineViewModels;
@model WorkoutRoutineDetailsViewModel

@{
    ViewData["Title"] = "Routine Details";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 600px;">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">@Model.ExerciseName</h5>
            <hr />
            <p class="card-text">@Model.ExerciseDescription</p>
            <ul class="list-group list-group-flush">
                @if (Model.Weight > 0)
                {
                    <li class="list-group-item">
                        <strong>Weight:</strong> @Model.Weight kg
                    </li>
                }
                <li class="list-group-item">
                    <strong>Reps:</strong> @Model.Reps
                </li>
                <li class="list-group-item">
                    <strong>Sets:</strong> @Model.Sets
                </li>
            </ul>
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="WorkoutRoutine" asp-action="Index" class="btn btn-warning flex-fill mx-1">Back</a>
                <a asp-controller="WorkoutRoutine" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this routine?');">Delete</a>
            </div>
        </div>
    </div>
</div>

