@using EnerGym.ViewModels.WorkoutRoutineViewModels
@model IEnumerable<WorkoutRoutineInfoViewModel>

@{
    ViewData["Title"] = "Workout Routines";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="WorkoutRoutine" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i> Add Routine</a>
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var routine in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@routine.ExerciseName</h5>
                    <p>@routine.ExerciseDescription</p>
                    <div class="card-content">
                        @if (!string.IsNullOrEmpty(routine.ImageUrl))
                        {
                            <img src="@routine.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@routine.ExerciseName">
                        }
                        else
                        {
                            <img src="~/img/no-image-available-02.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                        }
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <a asp-controller="WorkoutRoutine" asp-action="Details" asp-route-id="@routine.Id" class="btn btn-info w-50 me-1">Details</a>
                        <a asp-controller="WorkoutRoutine" asp-action="Edit" asp-route-id="@routine.Id" class="btn btn-secondary w-50 ms-1">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



