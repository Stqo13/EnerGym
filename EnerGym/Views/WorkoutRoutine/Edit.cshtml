@using EnerGym.ViewModels.WorkoutRoutineViewModels;
@model WorkoutRoutineEditViewModel;

@{
    ViewData["Title"] = "Edit Routine";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.ExerciseName" class="form-label-add-edit">Exercise Name</label>
                    <input asp-for="@Model.ExerciseName" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.ExerciseName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ExerciseDescription" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.ExerciseDescription" class="form-control" aria-required="false" rows="2" placeholder="@Model.ExerciseDescription"></textarea>
                <span asp-validation-for="@Model.ExerciseDescription" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Weight" class="form-label-add-edit">Weight</label>
                <input asp-for="@Model.Weight" class="form-control" aria-required="false" placeholder="Enter weight (optional)" />
                <span asp-validation-for="@Model.Weight" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Reps" class="form-label-add-edit">Repetitions</label>
                <input asp-for="@Model.Reps" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Reps" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Sets" class="form-label-add-edit">Sets</label>
                <input asp-for="@Model.Sets" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Sets" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center mb-2">
                <input class="btn-warning btn-dark-text w-25 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
