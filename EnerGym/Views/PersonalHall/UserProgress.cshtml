@model EnerGym.ViewModels.PersonalHallViewModels.ProgressViewModel

<h2>Your Gym Progress</h2>

<form method="post">
    <div class="form-group">
        <label for="Weight">Weight</label>
        <input asp-for="Weight" class="form-control" type="number" step="any" required />
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input asp-for="Date" class="form-control" type="date" required />
    </div>
    <div class="form-group">
        <label for="TotalReps">Total Reps</label>
        <input asp-for="TotalReps" class="form-control" type="number" required />
    </div>
    <div class="form-group">
        <label for="TotalSets">Total Sets</label>
        <input asp-for="TotalSets" class="form-control" type="number" required />
    </div>
    <div class="form-group">
        <label for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Progress</button>
</form>
