@using EnerGym.ViewModels.WorkoutPlanViewModels;
@model WorkoutPlanWithRoutinesViewModel

@{
    ViewData["Title"] = "Workout Plan Routines - " + Model.Plan.Name;
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    <a asp-controller="WorkoutPlan" asp-action="Details" asp-route-id="@Model.Plan.Id" class="btn btn-secondary">Back to Plan Details</a>
</div>
<hr />

<div class="row">
    @foreach (var routine in Model.WorkoutRoutines)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@routine.ExerciseName</h5>
                    <p class="card-text">@routine.ExerciseDescription</p>
                    <a asp-controller="WorkoutPlan" asp-action="DeleteRoutine" asp-route-id="@routine.Id" class="btn btn-danger mt-3">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    }
</div>
