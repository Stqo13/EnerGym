@using EnerGym.ViewModels.WorkoutPlanViewModels;
@using static EnerGym.Common.ApplicationConstraints.ApplicationUserConstraints;
@model WorkoutPlanDetailsViewModel

@{
    ViewData["Title"] = "Plan Details";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 100%; height: auto;" alt="@Model.ImageUrl" />
        }
    </div>

    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <hr />
            <p class="card-text">@Model.Description</p>
            <hr />
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="WorkoutPlan" asp-action="Index" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                        <a asp-controller="WorkoutPlan" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">Edit</a>
                }
                @if (User?.Identity?.IsAuthenticated == true)
                {
                        <a asp-controller="WorkoutPlan" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                }
                <a asp-controller="WorkoutPlan" asp-action="ShowWorkoutRoutines" asp-route-id="@Model.Id" class="btn btn-info d-flex justify-content-center align-items-center flex-fill mx-1">Show Routines</a>
            </div>
        </div>
    </div>
</div>
