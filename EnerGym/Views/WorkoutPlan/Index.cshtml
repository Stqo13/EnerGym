@using EnerGym.ViewModels.WorkoutPlanViewModels;
@model WorkoutPlansIndexViewModel

@{
    ViewData["Title"] = "Workout Plans";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="WorkoutPlan" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i> Add Plan</a>
    }
</div>

<hr />

<div class="d-flex flex-wrap justify-content-center gap-4">
    @foreach (var plan in Model.WorkoutPlans)
    {
        <div class="card" style="width: 300px;">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title text-center">@plan.Name</h5>
                <div class="card-content text-center">
                    @if (!string.IsNullOrEmpty(plan.ImageUrl))
                    {
                        <img src="@plan.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@plan.Name">
                    }
                    else
                    {
                        <img src="~/img/no-image-available-02.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                    }
                    <div class="d-flex justify-content-center mt-3">
                        <a asp-controller="WorkoutPlan" asp-action="Details" asp-route-id="@plan.Id" class="btn btn-info w-50 me-1">Details</a>
                        <a asp-controller="WorkoutPlan" asp-action="AddRoutines" asp-route-workoutPlanId="@plan.Id" class="btn btn-secondary w-50 ms-1">Add Routine</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-center mt-4">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</div>
