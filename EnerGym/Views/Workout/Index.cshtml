@using EnerGym.ViewModels.WorkoutViewModels

@model IEnumerable<WorkoutPlanInfoViewModel>
@{
    ViewData["Title"] = "Workout Plans";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Workout" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Add Plan</a>
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var plan in @Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@plan.Name</h5>
                    <div class="card-content">
                        @if (!string.IsNullOrEmpty(plan.ImageUrl))
                        {
                            <img src="@plan.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@plan.Name">
                        }
                        else
                        {
                            <img src="~/img/no-image-available-02.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                        }

                        <a asp-controller="Workout" asp-action="Details" asp-route-id="@plan.Id" class="btn btn-info w-100 mt-auto">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>