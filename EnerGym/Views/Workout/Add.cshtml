@using EnerGym.ViewModels.WorkoutViewModels

@model WorkoutPlanAddViewModel
@{
    ViewData["Title"] = "Add Plan";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.PlanName" class="form-label-add-edit">Product Name</label>
                    <input asp-for="@Model.PlanName" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.PlanName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.PlanDescription" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.PlanDescription" class="form-control" aria-required="true" rows="2" placeholder="Description (optional)"></textarea>
                <span asp-validation-for="@Model.PlanDescription" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">ImageURL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
                <a asp-controller="Workout" asp-action="AddRoutine" class="btn btn-primary"><i class="fas fa-plus"></i>Add Routine</a>
            </div>
        </form>
    </div>
</div>
