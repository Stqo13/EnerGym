@{
    ViewData["Title"] = "Page Not Found";
}

<style>
    body {
        font-family: Arial, sans-serif;
        text-align: center;
        background-color: #f8f9fa;
        color: #333;
    }

    img {
        max-width: 400px;
        margin: 20px 0;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div>
    <h1>Oops! Page Not Found (404)</h1>
    <p>We couldn't find what you were looking for. It's probably on a different server.</p>
    <img src="https://via.placeholder.com/400x300.png?text=404+Error:+Lost+in+Space!" alt="Funny 404 Image">
    <p>
        <a href="/">Go back to the homepage</a> or
        <a href="javascript:history.back()">return to the previous page</a>.
    </p>
</div>
