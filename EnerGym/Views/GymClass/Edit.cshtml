@using EnerGym.ViewModels.GymClassViewModels;
@model GymClassEditViewModel;

@{
    ViewData["Title"] = "Edit Gym Class";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.ClassName" class="form-label-add-edit">Class Name</label>
                    <input asp-for="@Model.ClassName" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.ClassName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Descripton" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Descripton" class="form-control" aria-required="false" rows="2" placeholder="Enter description (optional)"></textarea>
                <span asp-validation-for="@Model.Descripton" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.Capacity" class="form-label-add-edit">Capacity</label>
                <input asp-for="@Model.Capacity" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.InstructorName" class="form-label-add-edit">Instructor Name</label>
                <input asp-for="@Model.InstructorName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.InstructorName" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center mb-2">
                <input class="btn-warning btn-dark-text w-25 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
