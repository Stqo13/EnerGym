@using EnerGym.ViewModels.GymClassViewModels
@model IEnumerable<ScheduleInfoViewModel>

@{
    ViewData["Title"] = "Gym Class Schedules";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
        <div class="card-body">
            <h5 class="card-title">Schedules</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Schedule ID</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">Monday</th>
                        <th scope="col">Tuesday</th>
                        <th scope="col">Wednesday</th>
                        <th scope="col">Thursday</th>
                        <th scope="col">Friday</th>
                        <th scope="col">Saturday</th>
                        <th scope="col">Sunday</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var schedule in Model)
                    {
                        <tr>
                            <td>@schedule.ScheduleId</td>
                            <td>@schedule.StartDate.ToString("MMMM dd, yyyy")</td>
                            <td>@schedule.Monday</td>
                            <td>@schedule.Tuesday</td>
                            <td>@schedule.Wednesday</td>
                            <td>@schedule.Thursday</td>
                            <td>@schedule.Friday</td>
                            <td>@schedule.Saturday</td>
                            <td>@schedule.Sunday</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="GymClass" asp-action="Index" class="btn btn-secondary d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>
            </div>
        </div>
    </div>
</div>
