@using EnerGym.ViewModels.GymClassViewModels
@model IEnumerable<ScheduleInfoViewModel>

@{
    ViewData["Title"] = "Gym Class Schedules";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="card-body">
        <h5 class="card-title">Schedules</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Start Date</th>
                    <th scope="col">Active Days</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.StartDate.ToString("MMMM dd, yyyy")</td>
                        <td>
                            @if (schedule.Monday)
                            {
                                <span>Monday </span>
                            }
                            @if (schedule.Tuesday)
                            {
                                <span>Tuesday </span>
                            }
                            @if (schedule.Wednesday)
                            {
                                <span>Wednesday </span>
                            }
                            @if (schedule.Thursday)
                            {
                                <span>Thursday </span>
                            }
                            @if (schedule.Friday)
                            {
                                <span>Friday </span>
                            }
                            @if (schedule.Saturday)
                            {
                                <span>Saturday </span>
                            }
                            @if (schedule.Sunday)
                            {
                                <span>Sunday </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer text-center">
        <div class="d-flex justify-content-between align-items-center">
            <a asp-controller="GymClass" asp-action="Index" class="btn btn-secondary d-flex justify-content-center align-items-center flex-fill mx-1">Back</a>
        </div>
    </div>
</div>
