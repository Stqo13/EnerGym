@using EnerGym.ViewModels.GymClassViewModels;
@model GymClassDetailsViewModel;

@{
    ViewData["Title"] = "Confirm Enrollment";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.ClassName</h3>
                <p class="mb-0"><strong>Instructor:</strong> @Model.InstructorName</p>
                <p><strong>Capacity:</strong> @Model.Capacity</p>
                <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
                <p>@Model.Description</p>
            </div>
            <div class="card-footer text-center">
                <form asp-controller="GymClass" asp-action="EnrollConfirmed" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success">Confirm Enrollment</button>
                    <a asp-controller="GymClass" asp-action="Index" class="btn btn-warning">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
